<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/round_10_white_top"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:paddingHorizontal="20dp"
                android:textSize="15sp"
                android:textColor="@color/color_A6A6A6"
                android:text="取消"
                android:gravity="center"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:text="拨打次数"
                android:textSize="17sp"
                android:textColor="@color/color_454545"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:paddingHorizontal="20dp"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color_33c197"
                android:text="确定"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"/>

        <TextView
            android:id="@+id/tv_max_call_times"
            android:layout_width="wrap_content"
            android:textColor="@color/color_33c197"
            android:layout_gravity="center_horizontal"
            android:text="最多拨打100次"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

        <com.zyyoona7.wheel.WheelView
            android:layout_width="match_parent"
            android:id="@+id/wheelview"
            android:layout_marginVertical="20dp"
            app:wv_textSize="37sp"
            app:wv_sidetextSize="28sp"
            app:wv_sidetextSize2="17sp"
            app:wv_normalItemTextColor="#454545"
            app:wv_selectedItemTextColor="#33C197"
            app:wv_side_normalItemTextColor="#a5a5a5"
            app:wv_lineSpacing="0dp"
            app:wv_textBoundaryMargin="0dp"
            app:wv_curved="false"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>