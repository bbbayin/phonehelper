<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@mipmap/share_bg"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="17dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_A6A6A6"
                android:text="取消"
                android:paddingHorizontal="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="号码导入方式"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="42dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/word_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:background="@mipmap/word_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="文档导入"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txl_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:background="@mipmap/txl_import_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="通讯录导入"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/copy_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:background="@mipmap/copy_import_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="复制粘贴导入"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>