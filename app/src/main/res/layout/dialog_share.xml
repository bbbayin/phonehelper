<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@mipmap/share_bg"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/color_454545"
            android:layout_marginTop="30dp"
            android:text="分享"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="39dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/wx_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:background="@mipmap/weixin_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="微信朋友圈"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qq_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:background="@mipmap/qq_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="QQ空间"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qrcode_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:background="@mipmap/qrcode_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="生成二维码"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/copy_ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="65dp"
                    android:background="@mipmap/copy_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_454545"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="复制链接"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>