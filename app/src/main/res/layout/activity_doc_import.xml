<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@mipmap/back_white"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/round_10_grey"
        android:layout_height="294dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:text="请按照此格式进行上传(单列电话，无需其他信息)"
            android:textColor="@color/color_454545"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/import_tip_bg"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_A6A6A6"
                android:layout_marginTop="30dp"
                android:text="13345654877\n13345654877\n13345654877\n13345654877\n13345654877\n\13345654877\n13345654877\n13345654877"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/choose"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:background="@drawable/round_36_green"
        android:textSize="18sp"
        android:text="选择文档"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>