<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingVertical="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/register_back"
                android:layout_width="wrap_content"
                android:src="@mipmap/back_black"
                android:layout_centerVertical="true"
                android:paddingHorizontal="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#454545"
                android:text="注册账号"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@mipmap/logo"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/mobile_icon"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/mobile_et"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:layout_marginLeft="9dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e0e0e0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sms_icon"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/sms_icon"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/code_et"
                android:layout_toRightOf="@+id/sms_icon"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:layout_toLeftOf="@+id/code"
                android:layout_marginRight="9dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:layout_marginLeft="9dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="100dp"
                android:background="@drawable/round_20_green"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发送验证码"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:id="@+id/send_code"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#e0e0e0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lock_icon"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/lock_icon"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/pwd_et"
                android:layout_toRightOf="@+id/lock_icon"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_toLeftOf="@+id/eye_icon"
                android:layout_marginRight="9dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:layout_marginLeft="9dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/eye_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/eye_icon"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#e0e0e0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lock_icon2"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/lock_icon"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/pwd_et2"
                android:layout_toRightOf="@+id/lock_icon2"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:layout_toLeftOf="@+id/eye2_icon"
                android:layout_marginRight="9dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#454545"
                android:textColorHint="#A6A6A6"
                android:layout_marginLeft="9dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/eye_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/eye2_icon"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#e0e0e0"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="18dp"
                android:background="@mipmap/unselected_icon"
                android:layout_gravity="center_vertical"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/register_policy"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="我已阅读"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#A6A6A6"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/register_grey"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:text="已有账号，去登录 >"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:textColor="#1B9772"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/login_bottom_bg"
        android:layout_height="wrap_content"/>
</RelativeLayout>