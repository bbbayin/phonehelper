<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plbd_ll"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hmdr_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mobile_iv2"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/mobile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/mobile_iv2"
            android:text="号码导入"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/call_hmdr_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/call_hmdr_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/call_hmdr_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/skzs_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/sksz_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/sksz_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/sksz_iv"
            android:text="双卡设置"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/call_sksz_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/call_sksz_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/call_sksz_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/jgsz_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/jgsz_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/bdjg_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/jgsz_iv"
            android:text="间隔设置"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/call_jgsz_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/call_jgsz_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/call_jgsz_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/pl_gd_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/gd_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/pl_gd_iv"
            android:text="接通后自动挂断"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/pl_switch_gd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/switch_on" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/pl_gd2_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/gd2_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/pl_gd2_iv"
            android:text="接不通自动挂断"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/pl_switch_gd2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/switch_off" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/pl_call_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_36_grey"
        android:gravity="center"
        android:text="立即拨打"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>