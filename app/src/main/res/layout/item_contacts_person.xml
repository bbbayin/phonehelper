<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/root_rl"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/select_iv"
            android:layout_width="wrap_content"
            android:src="@mipmap/unselected_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_toRightOf="@+id/select_iv"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/color_454545"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_A6A6A6"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/call_iv"
            android:layout_width="wrap_content"
            android:src="@mipmap/call_icon"
            android:paddingHorizontal="10dp"
            android:layout_toLeftOf="@+id/sms_iv"
            android:layout_marginRight="5dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/sms_iv"
            android:layout_width="wrap_content"
            android:src="@mipmap/duanxin"
            android:paddingHorizontal="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>

</LinearLayout>