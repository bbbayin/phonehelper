<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bddh_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mobile_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/mobile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/mobile_iv"
            android:text="请输入号码:"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/call_mobile_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txl_iv"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:textColor="@color/color_454545"
            android:textColorHint="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/txl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/lxr_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/dsbh_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/dsbh_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/dsbh_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/dsbh_iv"
            android:text="定时拨号"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dsbh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/dsbh_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/dsbh_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdcs_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdcs_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/dsbh_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdcs_iv"
            android:text="拨打次数"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdcs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdcs_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdcs_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdjg_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdjg_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/bdjg_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdjg_iv"
            android:text="拨打间隔"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdjg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdjg_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdjg_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdfs_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdfs_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/bdfs_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdfs_iv"
            android:text="拨打方式"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdfs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdfs_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdfs_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/gd_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/gd_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/gd_iv"
            android:text="接通后自动挂断"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/gd_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/switch_on" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/gd2_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/gd2_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/gd2_iv"
            android:text="接不通自动挂断"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/gd_switch2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/switch_off" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <TextView
        android:id="@+id/home_btn_single_call_now"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_36_grey"
        android:gravity="center"
        android:text="立即拨打"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>