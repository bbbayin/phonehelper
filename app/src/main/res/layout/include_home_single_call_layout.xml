<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bddh_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/mobile_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/mobile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="请输入号码:"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/call_mobile_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="@color/color_454545"
            android:textColorHint="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/home_single_btn_clear_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@mipmap/clear" />

        <ImageView
            android:id="@+id/txl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@mipmap/lxr_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/dsbh_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/dsbh_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/dsbh_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="定时拨号"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dsbh_tv"
            android:layout_width="0dp"
            android:paddingStart="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/home_single_btn_clear_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:padding="4dp"
            android:src="@mipmap/clear"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dsbh_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right_arrow_grey" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdcs_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdcs_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/dsbh_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdcs_iv"
            android:text="拨打次数"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdcs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdcs_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdcs_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdjg_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdjg_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/bdjg_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdjg_iv"
            android:text="拨打间隔"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdjg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdjg_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdjg_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/bdfs_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/bdfs_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/bdfs_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/bdfs_iv"
            android:text="拨打方式"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bdfs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:layout_toLeftOf="@+id/bdfs_arrow"
            android:textColor="@color/color_A6A6A6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/bdfs_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/right_arrow_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/single_call_auto_finish_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/gd_iv"
            style="@style/HomeLeftIcon"
            android:background="@mipmap/gd_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/gd_iv"
            android:text="拨打30秒后自动挂断"
            android:textColor="@color/color_454545"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/gd_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/switch_off" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0" />

