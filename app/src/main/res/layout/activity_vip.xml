<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@mipmap/vip_bg1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="73dp"
                    android:background="@mipmap/vip_bg3"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="150dp"
                    android:background="@mipmap/vip_bg2"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_marginTop="94dp"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="360dp"
                    android:layout_height="55dp">
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="107dp"
                    android:textSize="15sp"
                    android:textColor="#5E450D"
                    android:layout_marginLeft="95dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/username"
                    android:textSize="12sp"
                    android:text="您还不是VIP会员"
                    android:textColor="#5E450D"
                    android:layout_marginLeft="95dp"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:id="@+id/icon_ll"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="210dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@mipmap/vip_icon1"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginTop="10dp"
                            android:text="定时拨号"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@mipmap/vip_icon2"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginTop="10dp"
                            android:text="批量拨号"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@mipmap/vip_icon1"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginTop="10dp"
                            android:text="短信发送"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@mipmap/vip_icon1"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="11sp"
                            android:layout_marginTop="10dp"
                            android:text="批量发短信"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choose_ll"
                    android:layout_below="@+id/icon_ll"
                    android:layout_marginTop="42dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@mipmap/divider_bg"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:text="VIP充值选择"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_454545"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@mipmap/divider_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerview"
                    android:layout_marginTop="18dp"
                    android:layout_below="@+id/choose_ll"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/recyclerview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ali_pay"
                        android:layout_width="wrap_content"
                        android:background="@mipmap/ali_pay_bg"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/wx_pay"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/wx_pay_bg"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:paddingVertical="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:src="@mipmap/back_white"
            android:layout_centerVertical="true"
            android:paddingHorizontal="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="成为VIP"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>