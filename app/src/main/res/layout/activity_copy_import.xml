<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@mipmap/back_white"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>

        <TextView
            android:text="复制粘贴导入"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/content_et"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/import_tv"
            android:layout_marginHorizontal="10dp"
            android:gravity="top"
            android:padding="10dp"
            android:textColor="@color/color_A6A6A6"
            android:textSize="12sp"
            android:hint="请按照一行一个号码的规则复制粘贴\n示例：16645234588\n16645234588\n16645234588\n16645234588"
            android:background="@drawable/round_10_grey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"/>
        
        <TextView
            android:id="@+id/import_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="立即导入"
            android:background="@drawable/round_36_grey2"/>
    </RelativeLayout>

</LinearLayout>