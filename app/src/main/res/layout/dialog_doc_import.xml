<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/round_10_white_top"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_A6A6A6"
                android:text="取消"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="文档导入格式"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E0E0E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/word_tv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/round_10_blue"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="word"/>

            <TextView
                android:id="@+id/excel_tv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/round_10_green"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="excel"/>

            <TextView
                android:id="@+id/txt_tv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/round_10_grey2"
                android:gravity="center"
                android:layout_marginBottom="35dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="txt"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>