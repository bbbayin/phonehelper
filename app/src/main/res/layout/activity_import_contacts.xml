<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通讯录"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="已选择(0)"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/title_rl"
        android:background="@color/white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/round_36_grey2"
            android:paddingLeft="15dp"
            android:text="搜索"
            android:textColor="#a8a8a8"
            android:textSize="15sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_rl" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/search_rl">

        <TextView
            android:id="@+id/top_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#E7E7E7"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="A"
            android:textColor="@color/color_454545"
            android:textSize="15sp" />
    </LinearLayout>

    <com.mob.sms.contacts.SideBar
        android:id="@+id/sidebar"
        android:layout_width="25dp"
        android:layout_height="375dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="87dp" />

    <TextView
        android:id="@+id/import_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_36_green"
        android:gravity="center"
        android:text="立即导入"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/import_tv"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/import_contacts_select_all"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/ic_selected_all"
            android:gravity="center"
            android:paddingStart="16dp"
            android:text="全选"
            android:textColor="#333"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>