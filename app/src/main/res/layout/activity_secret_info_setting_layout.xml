<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="隐私拨打设置"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:text="重要！请填写本机号码和对应的卡槽，否则无法成功获取隐私号码，填写的号码不会展示在对方手机上。"
        android:textColor="#ff5511"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本机号码："
            android:textColor="#666"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/secret_setting_et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="11"
            android:background="@null"
            android:hint="输入正确的手机号"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择卡槽："
            android:textColor="#666"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/secret_setting_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/secret_setting_rb_sim1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="卡槽1"
                android:textColor="#666"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/secret_setting_rb_sim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡槽2"
                android:textColor="#666"
                android:textSize="15sp" />
        </RadioGroup>
    </LinearLayout>


    <TextView
        android:id="@+id/secret_setting_btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_36_green"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>