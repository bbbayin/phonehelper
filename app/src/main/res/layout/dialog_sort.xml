<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/sort_ll"
        android:layout_width="110dp"
        android:orientation="vertical"
        android:background="@mipmap/sort_bg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="84dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sort1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="按时间排序方式"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="文件名(从A到Z)"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="文件名(从Z到A)"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="修改日期(从新到旧)"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="修改日期(从旧到新)"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="大小(从大到小)"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="110dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/sort7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="大小(从小到大)"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>