<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@mipmap/back_white"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="双卡设置"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sim1_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/sim1_tv"
            android:layout_width="wrap_content"
            android:text="使用卡1拨打"
            android:textColor="@color/color_454545"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/sim1_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/switch_on"
            android:scaleType="centerInside"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:id="@+id/sim2_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/sim2_tv"
            android:layout_width="wrap_content"
            android:text="使用卡2拨打"
            android:textColor="@color/color_454545"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/sim2_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/switch_off"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:id="@+id/sim_double_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/sim_double_tv"
            android:layout_width="wrap_content"
            android:text="双卡轮流拨打"
            android:textColor="@color/color_454545"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/sim_double_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/switch_off"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:id="@+id/sim_double_rl1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="卡1拨打次数"
            android:textColor="@color/color_454545"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sim1_subtract"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/jian_icon"
                android:paddingHorizontal="12dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_454545"
                android:text="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/sim1_num"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/sim1_plus"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:paddingHorizontal="12dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/jia_icon"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>

    <RelativeLayout
        android:id="@+id/sim_double_rl2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="卡2拨打次数"
            android:textColor="@color/color_454545"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sim2_subtract"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/jian_icon"
                android:paddingHorizontal="12dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_454545"
                android:text="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/sim2_num"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/sim2_plus"
                android:layout_width="wrap_content"
                android:scaleType="centerInside"
                android:paddingHorizontal="12dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/jia_icon"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="#e0e0e0"/>
</LinearLayout>