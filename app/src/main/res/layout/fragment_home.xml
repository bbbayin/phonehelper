<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:banner_indicator_gravity="center"
                    app:banner_indicator_height="5dp"
                    app:banner_indicator_marginBottom="10dp"
                    app:banner_indicator_normal_color="#91819C"
                    app:banner_indicator_normal_width="5dp"
                    app:banner_indicator_selected_color="#ffffff"
                    app:banner_indicator_selected_width="5dp"
                    app:banner_indicator_space="5dp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_marginTop="34dp"-->
<!--                    android:text="首页"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="18sp" />-->

<!--                <RelativeLayout-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="21dp"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:layout_marginRight="20dp">-->

<!--                    <ImageView-->
<!--                        android:layout_width="22dp"-->
<!--                        android:layout_height="19dp"-->
<!--                        android:layout_alignParentBottom="true"-->
<!--                        android:src="@mipmap/msg_icon" />-->

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:src="@mipmap/red_point" />-->
<!--                </RelativeLayout>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/ring_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="系统通知：您的云通话功能已恢复使用!"
                    android:textColor="@color/color_454545"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E7E7E7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/top1_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bddh_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/bddh_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="拨打电话"
                        android:textColor="@color/color_454545"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top2_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plbd_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/plbd_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="批量拨打"
                        android:textColor="@color/color_A6A6A6"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top3_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dxds_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/dxds_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="短信定时"
                        android:textColor="@color/color_A6A6A6"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 拨打电话 -->
                <include layout="@layout/include_home_single_call_layout" />
                <!-- 拨打电话 -->

                <!-- 批量拨打 -->
                <include
                    layout="@layout/include_home_multi_call_layout" />
                <!-- 批量拨打 -->

                <!-- 短信定时 -->
                <include
                    layout="@layout/include_home_message_timeout_layout"
                     />
                <!-- 短信定时 -->
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>