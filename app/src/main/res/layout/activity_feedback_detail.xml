<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:src="@mipmap/back_white"
            android:scaleType="centerInside"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="反馈内容"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#a8a8a8"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/time2"
                    android:textSize="12sp"
                    android:textColor="#a8a8a8"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_E7E7E7"
                    android:layout_height="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_454545"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#e0e0e0"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/round_10_grey"
                    android:layout_marginBottom="100dp"
                    android:layout_marginHorizontal="15dp"
                    android:minHeight="150dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/content_et"
                        android:layout_width="match_parent"
                        android:minHeight="80dp"
                        android:layout_margin="10dp"
                        android:textSize="14sp"
                        android:background="@null"
                        android:textColor="#a8a8a8"
                        android:hint="请描述您的问题，以便我们尽快为您处理"
                        android:gravity="top"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/add_iv"
                        android:layout_width="50dp"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/add_img"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="回复反馈"
            android:background="@drawable/round_36_green"/>
    </RelativeLayout>

</LinearLayout>